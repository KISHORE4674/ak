              style={{
                width: "40px",
                height: "40px",
                background: "#ffc107",
                borderRadius: "50%",
                display: "flex",
                alignItems: "center",
                justifyContent: "center",
                fontWeight: "bold",
                marginBottom: "10px",
              }}
            >
              SP
            </div>
            <div>
              <strong>SpeedUp</strong>
              <br />
              <span style={{ fontSize: "13px", color: "#adb5bd" }}>Admin</span>
            </div>
          </div>

          <nav style={{ display: "flex", flexDirection: "column", gap: "10px" }}>
            <NavLink
              to="/agent/booking"
              style={({ isActive }) => ({
                color: isActive ? "#ffc107" : "#fff",
                textDecoration: "none",
              })}
              onClick={closeIfMobile}
            >
              ðŸ“– Manage Bookings
            </NavLink>

            <NavLink
              to="/agent/payment"
              style={({ isActive }) => ({
                color: isActive ? "#ffc107" : "#fff",
                textDecoration: "none",
