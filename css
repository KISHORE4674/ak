/* Layout wrapper */
.rg-shell {
  display: flex;
  min-height: 100vh;
}

/* Sidebar styles */
.rg-sidebar {
  width: 250px;
  flex-shrink: 0;
  background: linear-gradient(180deg, #0f1b2d, #1c2e4a);
  color: var(--rg-text);
  display: flex;
  flex-direction: column;
  padding: 1rem;
  transition: transform 0.3s ease-in-out;
}

/* Sidebar toggle (mobile) */
.rg-sidebar.is-open {
  transform: translateX(0);
}

.rg-sidebar__nav {
  display: flex;
  flex-direction: column;
  margin-top: 1rem;
}

.rg-navlink {
  padding: 0.75rem 1rem;
  margin-bottom: 0.5rem;
  border-radius: 10px;
  color: var(--rg-sub);
  text-decoration: none;
  font-weight: 600;
  transition: background 0.3s ease, color 0.3s ease;
}
.rg-navlink:hover {
  background: rgba(255, 255, 255, 0.08);
  color: #fff;
}
.rg-navlink.active {
  background: linear-gradient(90deg, var(--rg-primary), var(--rg-accent));
  color: #fff;
}

/* Main content on the right */
.rg-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #f7f9fc;
  color: #333;
  overflow-y: auto;
}

/* Topbar */
.rg-topbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem;
  background: #fff;
  border-bottom: 1px solid #ddd;
}

.rg-content {
  padding: 1.5rem;
}

/* Backdrop for mobile */
.rg-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 10;
}

/* Responsive - collapse sidebar on small screens */
@media (max-width: 768px) {
  .rg-sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    transform: translateX(-100%);
    z-index: 20;
  }

  .rg-sidebar.is-open {
    transform: translateX(0);
  }

